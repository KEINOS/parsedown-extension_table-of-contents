<?xml version="1.0"?>
<ruleset name="Project Rules" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:noNamespaceSchemaLocation="https://raw.githubusercontent.com/squizlabs/PHP_CodeSniffer/master/phpcs.xsd">
    <!-- Repository-wide settings for ignoring specific warnings -->
    <description>Repository-wide settings for ignoring specific warnings</description>

    <!-- Exclude the vendor directory from analysis -->
    <exclude-pattern>vendor/*</exclude-pattern>

    <!-- Disable warnings for missing namespace in class declarations -->
    <rule ref="PSR1.Classes.ClassDeclaration.MissingNamespace">
        <severity>0</severity>
    </rule>

    <!-- Disable warnings for class declaration issues -->
    <rule ref="PSR1.Classes.ClassDeclaration">
        <severity>0</severity>
    </rule>

    <!-- Disable warnings for side effects found with symbols dur to be a single file -->
    <rule ref="PSR1.Files.SideEffects.FoundWithSymbols">
        <severity>0</severity>
    </rule>

    <!-- Customize additional rules as needed -->
</ruleset>
